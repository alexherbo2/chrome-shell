{
  "manifest_version": 2,
  "name": "Shell",
  "description": "WebExtension API to execute external commands through native messaging",
  "version": "0.1.0",
  "permissions": [
    "nativeMessaging"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "packages/terminal.png",
    "48": "packages/terminal.png",
    "128": "packages/terminal.png"
  }
}
